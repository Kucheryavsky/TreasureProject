<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TreasureProjectMobile.Add"
             Title="Add New Note">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            
            <Entry Text="{Binding Path=NewNote.NoteHeader}" Placeholder="Header..."/>
            <Entry Text="{Binding Path=NewNote.NoteText}" Grid.Row="1" Placeholder="Text of your note..."/>
            <Button x:Name="Save" Grid.Row="2" Text="SAVE" Command="{Binding Add}"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>