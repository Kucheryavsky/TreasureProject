<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TreasureProjectMobile.Add">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="8*"/>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            
            <Entry Text="{Binding Path=NewNote.NoteHeader}"  Grid.Column="1"/>
            <Entry Text="{Binding Path=NewNote.NoteText}"  Grid.Column="1" Grid.Row="1"/>
            <Button x:Name="Save" Grid.Column="1" Grid.Row="2" Text="SAVE" Command="{Binding Add}"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>