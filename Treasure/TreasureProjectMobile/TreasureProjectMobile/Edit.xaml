<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TreasureProjectMobile.Edit">
    <ContentPage.Content>
                <Grid>
            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            
            <Entry   Text="{Binding NoteHeader}" />
            <Editor Text="{Binding NoteText}" Grid.Row="1" />
            <Button Text="Save" Grid.Column="0" Grid.Row="2"  Command="{Binding Update}"/>
        </Grid>

    </ContentPage.Content>
</ContentPage>